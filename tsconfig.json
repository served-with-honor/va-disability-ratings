{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.json",
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.test.ts",
  ],
  "paths": {
    "~*": ["./src/*"],
  },
}
