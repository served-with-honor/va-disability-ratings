{
  "name": "@served-with-honor/va-disability-ratings",
  "description": "JS Library for VA Disability Ratings & Payments",
  "type": "module",
  "auther": "Lee Wise <me@theleewise.com> (https://theleewise.com)",
  "version": "1.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/VAClaimsInsider/va-disability-ratings.git"
  },
  "exports": {
    ".": {
      "types": "./build/types/index.d.ts",
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "default": "./build/esm/index.js"
    }
  },
  "main": "./build/esm/index.js",
  "scripts": {
    "lint": "eslint -c ./.eslintrc.yaml .",
    "test": "jest",
    "test:ci": "jest --ci --reporters='default' --reporters='./github-actions-reporter'",
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build:clean": "rm -rf ./build",
    "fix": "fix-esm-import-path build/",
    "build": "npm-run-all build:clean compile && node ./scripts/prepare-package-json.js && fix-esm-import-path build/esm"
  },
  "engines": {
    "node": "18"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.4",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.4",
    "typescript": "^4.5.4"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "currency.js": "^2.0.4",
    "fix-esm-import-path": "^1.10.1"
  }
}
